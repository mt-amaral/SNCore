@using Admin.Shared.Request.Host
@using Admin.Shared.Response.Host
@inject IGroupHostService GroupHostService
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Criar Novo Grupo</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField
            @bind-Value="Request.GroupName"
            Label="Nome do Grupo"
            Required="true"
            Variant="Variant.Outlined"
            RequiredError="Nome é obrigatório"
            Immediate="true" 
            MaxLength="50"/>
    </DialogContent>
    <DialogActions>
        <MudButton
            OnClick="SubmitAsync"
            Color="Color.Primary"
            Disabled="@(!IsFormValid)"
            Variant="Variant.Filled">Salvar</MudButton>
        <MudButton
            OnClick="Cancel"
            Color="Color.Secondary"
            Variant="Variant.Text">Cancelar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = null!;
    
    [Parameter]
    public GroupHostResponse Item { get; set; } = new();
    

    private CreateGroupHostRequest Request { get; set; } = new();
    private bool IsFormValid => !string.IsNullOrWhiteSpace(Request.GroupName);

    protected override void OnInitialized()
    {
        Request = Mapper.MapToEditGroup(Item);
    }

    private async Task SubmitAsync()
    {
        if (!IsFormValid) return;
        
        GroupHostResponse? response = await GroupHostService.UpdateHostGroup(Request, Item.Id).HandleResponseAsync(Snackbar);
        MudDialog.Close(DialogResult.Ok(response));
    }

    private void Cancel() => MudDialog.Cancel();
}