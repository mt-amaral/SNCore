
@inherits LayoutComponentBase


<Layout SideWidth="0" IsPage="true" ShowGotoTop="true" ShowCollapseBar="true"
        IsFullSide="@IsFullSide" IsFixedHeader="@IsFixedHeader" IsFixedFooter="@IsFixedFooter" ShowFooter="@ShowFooter"
        TabDefaultUrl="/"
        Menus="@Menus" UseTabSet="@UseTabSet" AdditionalAssemblies="new[] { GetType().Assembly, typeof(Client.Pages.Home).Assembly }" class="@Theme">
    <Header>
        <span class="ms-3 flex-sm-fill d-none d-sm-block"></span>
        <div class="flex-fill d-sm-none"></div>
        <Widget></Widget>
        <Logout ImageUrl="images/Juninho.png" UserName="Admin">
            <LinkTemplate>
                <a href="#"><i class="fa-solid fa-suitcase"></i>...</a>
                <a href="#"><i class="fa-solid fa-cog"></i>...</a>
                <a href="#"><i class="fa-solid fa-bell"></i>...<span class="badge badge-pill badge-success"></span></a><App />
                <LogoutLink />
            </LinkTemplate>
        </Logout>
        <div class="layout-drawer" @onclick="@(e => IsOpen = !IsOpen)"><i class="fa fa-palette"></i></div>
    </Header>
    <Side>
    <div class="layout-banner">
        <div class="layout-title">
            <span>...</span>
        </div>
    </div>
    </Side>
    <Main>
        <CascadingValue Value="this" IsFixed="true">
            @Body
        </CascadingValue>
    </Main>
    <Footer>
        <div class="text-center flex-fill">
            <a class="page-layout-demo-footer-link" href="#" target="_blank">....</a>
        </div>
    </Footer>
    <NotFound>
        <p>nothing at this address.</p>
    </NotFound>
</Layout>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
