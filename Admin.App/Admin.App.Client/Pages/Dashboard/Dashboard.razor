    public Notification Alert = new();
    public List<AlertItemResponse> Notifications = new()
    {
        new AlertItemResponse() {  Title = "Notification Title", Message = "text sub-title", TypeAlert = AlertItemIcon.Erro},
        new AlertItemResponse() {  Title = "Notification Title", Message = "text sub-title", TypeAlert = AlertItemIcon.Success},
        new AlertItemResponse() {  Title = "Notification Title", Message = "text sub-title", TypeAlert = AlertItemIcon.Information},
