@page "/host"
@using Admin.App.Client.Components.Grid
@using Admin.Shared.Response
@inject  HostService HostApi

<HostGrid HostRender="Hosts"/>


@code {

    public IEnumerable<HostResponse> Hosts { get; set; } = new List<HostResponse>();

    protected override async Task OnInitializedAsync()
    {
        Hosts = await HostApi.GetHostsAsync() ?? new List<HostResponse>();
    }

}