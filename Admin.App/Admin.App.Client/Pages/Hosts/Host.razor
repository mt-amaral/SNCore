@page "/host"
@using System.Runtime.InteropServices.JavaScript
@using Admin.App.Client.Components.Chart

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="d-flex">
    <ChartBar yMax="ValorY" Datas="Dates" @ref="Teste"/>
    <MudNumericField @bind-Value="ValorY" Min="1" Class="mb-3" For="@(() => ValorY)" @onchange="() => Upteste()"/>
    <MudDatePicker @bind-Date="Dates[0]" Label="Data Inicial" Editable="true" @onchange="() => UpdateDD()" />
</MudContainer>

@code {
    public int ValorY = 100;
    public ChartBar Teste = new();
    public List<DateTime?> Dates = new List<DateTime?>
    {
        new DateTime(2022, 1, 1),
        new DateTime(2023, 1, 1)
    };

    public async Task UpdateDD()
    {
        await Teste.updateDate();
    }
    
    public async Task Upteste()
    {
        await Teste.updateDate();
    }
}