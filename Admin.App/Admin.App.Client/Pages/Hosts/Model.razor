@page "/model"
@using Admin.Shared.Response
@inject ModelService ModelService

<MudGrid>
    @foreach (ModelResponse model in Models)
    {
        
    <MudItem xs="6" sm="3">
        <MudLink Href="https://seu-link-aqui.com/item-" Target="_blank" Style="text-decoration: none;">
            <MudPaper Class="d-flex align-center justify-center mud-width-full py-8" Style="cursor: pointer;">
                @model.Name
            </MudPaper>
        </MudLink>
    </MudItem>
    }
</MudGrid>

@code {
    
    public IEnumerable<ModelResponse> Models { get; set; } = new  List<ModelResponse>();
    
    protected override async Task OnInitializedAsync()
    {
        Models = await ModelService.GetModelsAsync() ?? new List<ModelResponse>();
    }
}

