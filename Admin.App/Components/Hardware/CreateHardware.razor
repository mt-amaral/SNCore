@namespace Admin.App.Componentes.Hardware

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            Add New Server
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="newHardware.Name" Label="Name" />
        <MudTextField @bind-Value="newHardware.Description" Label="Description" />
        <MudTextField @bind-Value="newHardware.Model" Label="Modelo" />
        <MudTextField @bind-Value="newHardware.Ipv4" Label="IP Address" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Add">Add Server</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public HardwareRequest newHardware { get; set; } = new HardwareRequest();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Add()
    {
        MudDialog.Close(DialogResult.Ok(newHardware));
    }
}
