@namespace Admin.App.Componentes.Hardware


<MudDialog MaxWidth="MaxWidth.Medium" FullWidth="true" Style="width: 600px;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3 mb-n1" />
            Delete Hardware?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@hardware.Id.ToString()" Label="Server ID" ReadOnly="true" DisableUnderLine="true"/>
        <MudTextField Value="@hardware.Name" Label="Name" ReadOnly="true" AdornmentColor="Color.Transparent" DisableUnderLine="true" />
        <MudTextField Value="@hardware.Description" Label="Location" ReadOnly="true" AdornmentColor="Color.Transparent" DisableUnderLine="true" />
        <MudTextField Value="@hardware.HardwareModel" Label="Model" ReadOnly="true" AdornmentColor="Color.Transparent" DisableUnderLine="true" />
        <MudTextField Value="@hardware.Ipv4" Label="IP Address" ReadOnly="true" AdornmentColor="Color.Transparent" DisableUnderLine="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="Delete">Delete Hardware</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public HardwareResponse hardware { get; set; } = new HardwareResponse();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Delete()
    {
        MudDialog.Close(DialogResult.Ok(hardware));
    }
}